#!/bin/bash

# shellcheck disable=SC2028
echo "Running post-commit hook... 🚀\n"

# Check if there are uncommitted changes in the working directory or index
if [ -n "$(git status --porcelain)" ]; then
    echo "New changes detected after the pre-commit hook 📑\n"

    # Stage all changes
    git add .

    # Commit the changes with a specific message without triggering the pre-commit hook
    git commit -m "style: auto-save changes after pre-commit" --no-verify

    echo "Changes committed with message: 'style: auto-save changes after pre-commit' 📝\n"
else
    echo "No new changes detected after the pre-commit hook 🤷‍♂️\n"
fi

echo "Post-commit hook completed! 🎉\n"
